<h1>View Your Question</h1>

<h4><%= @question.question %></h4>
<p> A. <%= @question.ans_1 %></p>
<p> B. <%= @question.ans_2 %></p>
<p> C. <%= @question.ans_3 %></p>
<p> D. <%= @question.ans_4 %></p>

<br>
<% ans = @question.correct_ans %>
<p>Correct Answer: <%= @question.send(ans.to_sym) %> </p>

<a href="/teacher/<%= @teacher.slug %>/question/<%= @question.id %>/edit"><button>Edit This Question</button></a>
<form action="/teacher/<%= @teacher.slug %>/question/<%= @question.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="delete"/>
  <input type="submit" id="Delete" value="Delete This Question"/>
</form>
